{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/vg-json-data/mxf-json-data/master/schema/mxf-items.schema.json",

  "definitions": {
    "hexString": {
      "type": "string",
      "pattern": "^0x[0-9A-Fa-f]+$"
    },

    "itemType": {
      "type": "string",
      "enum": [
        "beam",
        "equipment",
        "energytank",
        "missile",
        "powerbomb",
        "xreserve"
      ]
    },

    "consumableResource": {
      "type": "string",
      "enum": [
        "regularEnergy",
        "reserveXEnergy",
        "reserveXAmmo",
        "missile",
        "powerBomb"
      ]
    },

    "coreItemData": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "itemType",
        "paletteRow",
        "bossBit",
        "speedXY",
        "gatherX",
        "gatherY",
        "health",
        "damage"
      ],
      "properties": {
        "itemType": { "$ref": "#/definitions/itemType" },
        "paletteRow": { "$ref": "#/definitions/hexString" },
        "bossBit": { "$ref": "#/definitions/hexString" },
        "speedXY": { "$ref": "#/definitions/hexString" },
        "gatherX": { "$ref": "#/definitions/hexString" },
        "gatherY": { "$ref": "#/definitions/hexString" },
        "health": { "$ref": "#/definitions/hexString" },
        "damage": { "$ref": "#/definitions/hexString" }
      }
    }
  },

  "type": "object",
  "title": "Metroid: X-Fusion - Items and Flags Schema",
  "additionalProperties": false,

  "properties": {
    "$schema": { "type": "string" },

    "startingRoom": { "type": "string" },
    "startingNode": { "type": "integer" },

    "startingItems": {
      "type": "array",
      "items": { "type": "string" }
    },

    "startingFlags": {
      "type": "array",
      "items": { "type": "string" }
    },

    "startingLocks": {
      "type": "array",
      "items": { "type": "string" }
    },

    "startingResources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["resource", "maxAmount"],
        "properties": {
          "resource": { "$ref": "#/definitions/consumableResource" },
          "maxAmount": { "type": "integer" }
        }
      }
    },

    "coreXRewardLookupTableAddr": { "$ref": "#/definitions/hexString" },
    "majorItemLookupTableAddr": { "$ref": "#/definitions/hexString" },

    "implicitItems": {
      "type": "array",
      "items": { "type": "string" }
    },

    "upgradeItems": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "wram", "data"],
        "properties": {
          "name": { "type": "string" },
          "wram": { "$ref": "#/definitions/hexString" },
          "data": { "$ref": "#/definitions/coreItemData" }
        }
      }
    },

    "reserveXItems": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "pcAddress", "data"],
        "properties": {
          "name": { "type": "string" },
          "pcAddress": { "$ref": "#/definitions/hexString" },
          "data": { "$ref": "#/definitions/coreItemData" }
        }
      }
    },
    
    "goldGadoraXItem": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "pcAddress", "data"],
        "properties": {
          "name": { "type": "string" },
          "pcAddress": { "$ref": "#/definitions/hexString" },
          "data": { "$ref": "#/definitions/coreItemData" }
        }
      }
    },
    
    "expansionItems": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "data", "resource", "resourceAmount"],
        "properties": {
          "name": { "type": "string" },
          "data": { "$ref": "#/definitions/hexString" },
          "resource": { "$ref": "#/definitions/consumableResource" },
          "resourceAmount": { "type": "integer" }
        }
      }
    },

    "gameFlags": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["name", "address", "bit", "description"],
          "properties": {
            "name": {
              "type": "string"
            },
            "address": {
              "type": "string",
              "pattern": "^[0-9A-Fa-f]{6}$"
            },
            "bit": {
              "type": "integer",
              "minimum": 0,
              "maximum": 7
            },
            "description": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
